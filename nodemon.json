{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "html",
    "statics"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "apps/",
    "bin/",
    "routes/",
    "app.js",
    "web"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}